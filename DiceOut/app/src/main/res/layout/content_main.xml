<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.copperstick6.diceout.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="Roll!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rollButton"
        android:layout_below="@+id/dice5Image"
        android:onClick="rollDice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id = "@+id/rollResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Play!"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id = "@+id/dice1Image"
        android:layout_below = "@id/rollResult"
        android:layout_marginTop = "25dp"
        android:layout_alignParentLeft = "true"
        android:src = "@drawable/die_face_1"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id = "@+id/dice2Image"
        android:layout_below = "@id/rollResult"
        android:layout_marginTop = "25dp"
        android:layout_centerHorizontal = "true"
        android:src = "@drawable/die_face_2"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id = "@+id/dice3Image"
        android:layout_below = "@id/rollResult"
        android:layout_marginTop = "25dp"
        android:layout_alignParentRight = "true"
        android:srce = "@drawable/die_face_3"
        />
</RelativeLayout>
